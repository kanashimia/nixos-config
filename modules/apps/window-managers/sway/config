set {
    $mod Mod4

    $left h
    $down j
    $up k
    $right l

    $term foot
    $browser qutebrowser
    $telegram kotatogram-desktop

    $menu j4-dmenu-desktop --dmenu=bemenu --term=$term --no-generic
}

input * {
    xkb_layout "us,ru"
    xkb_variant "dvorak,ruu"
    xkb_options "caps:swapescape,grp_led:num,grp:rctrl_rshift_toggle"
    tap enable
}

seat * hide_cursor 1000

floating_modifier $mod normal

bindsym --to-code {
    $mod+Return exec $term
    $mod+Shift+b exec $browser
    $mod+Shift+t exec $telegram
    $mod+r exec $menu

    $mod+Shift+c kill
    $mod+q reload
    $mod+Shift+q exec swaymsg exit

    $mod+$left focus left
    $mod+$down focus down
    $mod+$up focus up
    $mod+$right focus right

    $mod+Shift+$left move left
    $mod+Shift+$down move down
    $mod+Shift+$up move up
    $mod+Shift+$right move right

    $mod+1 workspace number 1
    $mod+2 workspace number 2
    $mod+3 workspace number 3
    $mod+4 workspace number 4
    $mod+5 workspace number 5
    $mod+6 workspace number 6
    $mod+7 workspace number 7
    $mod+8 workspace number 8
    $mod+9 workspace number 9

    $mod+Shift+1 move container to workspace number 1
    $mod+Shift+2 move container to workspace number 2
    $mod+Shift+3 move container to workspace number 3
    $mod+Shift+4 move container to workspace number 4
    $mod+Shift+5 move container to workspace number 5
    $mod+Shift+6 move container to workspace number 6
    $mod+Shift+7 move container to workspace number 7
    $mod+Shift+8 move container to workspace number 8
    $mod+Shift+9 move container to workspace number 9

    $mod+b split h
    $mod+v split v

    $mod+t layout toggle split
    $mod+f fullscreen

    $mod+Shift+space floating toggle
    $mod+space focus mode_toggle

    $mod+a focus parent

    $mod+Shift+minus move scratchpad
    $mod+minus scratchpad show

    XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
    XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
    XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
}

set {
    $black "#4e5471"
    $red "#f07178"
    $green "#c3e88d"
    $yellow "#ffc47c"
    $blue "#82aaff"
    $purple "#c792ea"
    $cyan "#89ddff"
    $white "#d5d5e1"

    $foreground "#d5d5e1"
    $background "#15171f"
    $background_dark "#0b0c10"
    $background_bright "#1f222e"

    $bright    $foreground 
    $dark      $background_dark
    $indicator $blue

    $transparent "#FFFFFF00"
}

#                       border, bg,         text,   indicator, child_border
client.focused          $dark   $bright     $dark   $indicator $bright
client.focused_inactive $dark   $background $bright $indicator $dark
client.unfocused        $dark   $background $bright $indicator $dark

output * bg $background_dark solid_color

for_window [shell="xwayland"] {
    title_format "%shell"
    urgent deny
    border normal
}

set $border_size 1

default_border pixel $border_size
default_floating_border pixel $border_size

titlebar_padding $border_size
titlebar_border_thickness $border_size

bindsym --to-code $mod+s mode "resize"
set $resize_amount 100px
mode "resize" bindsym --to-code {
    $left resize shrink width $resize_amount
    $right resize grow width $resize_amount
    $down resize shrink height $resize_amount
    $up resize grow height $resize_amount

    Return mode "default"
    Escape mode "default"
}

bar {
    position top
    mode hide
    modifier $mod
    colors {
        background         $transparent
        focused_workspace  $background  $foreground        $background
        inactive_workspace $background  $background_bright $foreground
    }
}

include /etc/sway/config.d/*
